{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "strict": true, // Enable all strict type-checking options
    "jsx": "react-native", // Specify JSX code generation
    "skipLibCheck": true // Skip type checking of declaration files
  },
  "include": [
    "nativewind-env.d.ts", // Include your declaration file for NativeWind
    "src/**/*", // Adjust according to your project structure
    "App.tsx" // Include your main app file if it's outside src/
  ],
  "exclude": [
    "node_modules" // Exclude node_modules from compilation
  ]
}
